

<%= render "layouts/errors", :object => @usersentence %>

<%= form_for [@story, @usersentence] do |f| %>
  <%= image_tag @story.imageShow() %>
  <%= f.label :image %>
  <%= f.text_field :image %>
  <%= f.label :sentence %>
  <%= f.text_field :sentence %>
  <%= f.label :user %>
  <%= f.text_field :user %>
  <p>
    <%= f.submit  %>
  </p>

<% end %>
